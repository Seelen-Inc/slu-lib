{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Settings",
  "type": "object",
  "properties": {
    "activeIconPacks": {
      "description": "list of selected icon packs",
      "type": "array",
      "default": [
        "@system/icon-pack"
      ],
      "items": {
        "$ref": "#/$defs/IconPackId"
      }
    },
    "activeThemes": {
      "description": "list of selected themes",
      "type": "array",
      "default": [
        "@default/theme"
      ],
      "items": {
        "$ref": "#/$defs/ThemeId"
      }
    },
    "byTheme": {
      "description": "Custom variables for themes by theme id\n### example\n```json\n{\n    \"@username/themeName\": {\n        \"--css-variable-name\": \"123px\",\n        \"--css-variable-name2\": \"#aabbccaa\",\n    }\n}\n```",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/ThemeSettings"
      },
      "default": {}
    },
    "byWallpaper": {
      "description": "settings for each background",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/WallpaperInstanceSettings"
      },
      "default": {}
    },
    "byWidget": {
      "description": "Custom settings for widgets",
      "$ref": "#/$defs/SettingsByWidget",
      "default": {
        "@seelen/fancy-toolbar": {
          "delayToHide": 800,
          "delayToShow": 100,
          "dynamicColor": true,
          "enabled": true,
          "height": 30,
          "hideMode": "Never",
          "position": "Top",
          "showHibernateButton": false
        },
        "@seelen/launcher": {
          "enabled": false,
          "monitor": "MouseOver",
          "runners": [
            {
              "id": "RUN",
              "label": "t:app_launcher.runners.explorer",
              "program": "explorer.exe",
              "readonly": true
            },
            {
              "id": "CMD",
              "label": "t:app_launcher.runners.cmd",
              "program": "cmd.exe",
              "readonly": true
            }
          ]
        },
        "@seelen/wallpaper-manager": {
          "backgroundsV2": [],
          "enabled": true,
          "interval": 60,
          "randomize": false
        },
        "@seelen/weg": {
          "delayToHide": 800,
          "delayToShow": 100,
          "enabled": true,
          "hideMode": "OnOverlap",
          "margin": 8,
          "mode": "MinContent",
          "padding": 8,
          "pinnedItemsVisibility": "Always",
          "position": "Bottom",
          "showEndTask": false,
          "showInstanceCounter": true,
          "showWindowTitle": false,
          "size": 40,
          "spaceBetweenItems": 8,
          "temporalItemsVisibility": "All",
          "thumbnailGenerationEnabled": true,
          "visibleSeparators": true,
          "zoomSize": 70
        },
        "@seelen/window-manager": {
          "autoStackingByCategory": true,
          "border": {
            "enabled": true,
            "offset": 0.0,
            "width": 3.0
          },
          "defaultLayout": "@default/wm-bspwm",
          "enabled": false,
          "floating": {
            "height": 500.0,
            "width": 800.0
          },
          "resizeDelta": 10.0,
          "workspaceGap": 10,
          "workspaceMargin": {
            "bottom": 0,
            "left": 0,
            "right": 0,
            "top": 0
          },
          "workspacePadding": 10
        }
      }
    },
    "dateFormat": {
      "description": "MomentJS date format",
      "type": "string",
      "default": "ddd D MMM, hh:mm A"
    },
    "devTools": {
      "description": "enable or disable dev tools tab in settings",
      "type": "boolean",
      "default": false
    },
    "drpc": {
      "description": "discord rich presence",
      "type": "boolean",
      "default": true
    },
    "fancyToolbar": {
      "description": "@deprecated since v2.1.0, will be removed in v3.0.0",
      "anyOf": [
        {
          "$ref": "#/$defs/FancyToolbarSettings"
        },
        {
          "type": "null"
        }
      ],
      "writeOnly": true
    },
    "language": {
      "description": "language to use, if null the system locale is used",
      "type": [
        "string",
        "null"
      ],
      "default": "en"
    },
    "launcher": {
      "description": "@deprecated since v2.1.0, will be removed in v3.0.0",
      "anyOf": [
        {
          "$ref": "#/$defs/SeelenLauncherSettings"
        },
        {
          "type": "null"
        }
      ],
      "writeOnly": true
    },
    "monitorsV3": {
      "description": "list of monitors and their configurations",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/MonitorConfiguration"
      },
      "default": {}
    },
    "oldActiveThemes": {
      "description": "list of selected themes as filename as backguard compatibility for versions before v2.3.8, will be removed in v3",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "seelenweg": {
      "description": "@deprecated since v2.1.0, will be removed in v3.0.0",
