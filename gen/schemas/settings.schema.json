    "ThemeId": {
      "description": "Visual id composed of the creator username and the resource name. e.g. `@username/resource-name`",
      "$ref": "#/$defs/ResourceId"
    },
    "ThemeSettings": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "ThirdPartyWidgetSettings": {
      "type": "object",
      "properties": {
        "$instances": {
          "description": "By intance will be used to store settings in case of multiple instances allowed on widget.\\\nThe map values will be merged with the root object and default values on settings declaration.",
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/TsUnknown"
            }
          }
        },
        "enabled": {
          "description": "Enable or disable the widget",
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/TsUnknown"
      }
    },
    "TsUnknown": true,
    "UpdateChannel": {
      "type": "string",
      "enum": [
        "Release",
        "Beta",
        "Nightly"
      ]
    },
    "UpdaterSettings": {
      "type": "object",
      "properties": {
        "channel": {
          "$ref": "#/$defs/UpdateChannel"
        }
      },
      "required": [
        "channel"
      ]
    },
    "VirtualDesktopStrategy": {
      "type": "string",
      "enum": [
        "Native",
        "Seelen"
      ]
    },
    "WallpaperId": {
      "description": "Visual id composed of the creator username and the resource name. e.g. `@username/resource-name`",
      "$ref": "#/$defs/ResourceId"
    },
    "WallpaperInstanceSettings": {
      "type": "object",
      "properties": {
        "blur": {
          "description": "blur factor to apply to the image",
          "type": "integer",
          "format": "uint32",
          "default": 0,
          "minimum": 0
        },
        "contrast": {
          "description": "number between 0 and 2",
          "type": "number",
          "format": "float",
          "default": 1.0
        },
        "flipHorizontal": {
          "description": "will flip the image/video horizontally",
          "type": "boolean",
          "default": false
        },
        "flipVertical": {
          "description": "will flip the image/video vertically",
          "type": "boolean",
          "default": false
        },
        "objectFit": {
          "description": "method to fill the monitor background",
          "$ref": "#/$defs/ObjectFit",
          "default": "cover"
        },
        "objectPosition": {
          "description": "position of the background",
          "$ref": "#/$defs/ObjectPosition",
          "default": "center"
        },
        "overlayColor": {
          "type": "string",
          "default": "#ff0000"
        },
        "overlayMixBlendMode": {
          "$ref": "#/$defs/MixBlendMode",
          "default": "multiply"
        },
        "playbackSpeed": {
          "description": "playback speed for video backgrounds",
          "$ref": "#/$defs/PlaybackSpeed",
          "default": "x1"
        },
        "saturation": {
          "description": "number between 0 and 2",
          "type": "number",
          "format": "float",
          "default": 1.0
        },
        "withOverlay": {
          "description": "will overlay the image/video with a color filter",
          "type": "boolean",
          "default": false
        }
      }
    },
    "WegPinnedItemsVisibility": {
      "type": "string",
      "enum": [
        "Always",
        "WhenPrimary"
      ]
    },
    "WegTemporalItemsVisibility": {
      "type": "string",
      "enum": [
        "All",
        "OnMonitor"
      ]
    },
    "WindowManagerSettings": {
      "type": "object",
      "properties": {
        "autoStackingByCategory": {
          "description": "enable or disable auto stacking by category",
          "type": "boolean",
          "default": true
        },
        "border": {
          "description": "window manager border",
          "$ref": "#/$defs/Border",
          "default": {
            "enabled": true,
            "offset": 0.0,
            "width": 3.0
          }
        },
        "defaultLayout": {
          "description": "default layout",
          "$ref": "#/$defs/PluginId",
          "default": "@default/wm-bspwm"
        },
        "enabled": {
          "description": "enable or disable the window manager",
          "type": "boolean",
          "default": false
        },
        "floating": {
          "description": "floating window settings",
          "$ref": "#/$defs/FloatingWindowSettings",
          "default": {
            "height": 500.0,
            "width": 800.0
          }
        },
        "resizeDelta": {
          "description": "the resize size in % to be used when resizing via cli",
          "type": "number",
          "format": "float",
          "default": 10.0
        },
        "workspaceGap": {
          "description": "default gap between containers",
          "type": "integer",
          "format": "uint32",
          "default": 10,
          "minimum": 0
        },
        "workspaceMargin": {
          "description": "default workspace margin",
          "$ref": "#/$defs/Rect",
          "default": {
            "bottom": 0,
            "left": 0,
            "right": 0,
            "top": 0
          }
        },
        "workspacePadding": {
          "description": "default workspace padding",
          "type": "integer",
          "format": "uint32",
          "default": 10,
          "minimum": 0
        }
      }
    }
  }
