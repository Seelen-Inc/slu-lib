  "$defs": {
    "Border": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "offset": {
          "type": "number",
          "format": "double",
          "default": 0.0
        },
        "width": {
          "type": "number",
          "format": "double",
          "default": 3.0
        }
      }
    },
    "FancyToolbarSettings": {
      "type": "object",
      "properties": {
        "delayToHide": {
          "description": "delay to hide the toolbar on Mouse Leave in milliseconds",
          "type": "integer",
          "format": "uint32",
          "default": 800,
          "minimum": 0
        },
        "delayToShow": {
          "description": "delay to show the toolbar on Mouse Hover in milliseconds",
          "type": "integer",
          "format": "uint32",
          "default": 100,
          "minimum": 0
        },
        "dynamicColor": {
          "description": "enable or disable dynamic color based on maximized focused window (themes can override this)",
          "type": "boolean",
          "default": true
        },
        "enabled": {
          "description": "enable or disable the fancy toolbar",
          "type": "boolean",
          "default": true
        },
        "height": {
          "description": "height of the fancy toolbar",
          "type": "integer",
          "format": "uint32",
          "default": 30,
          "minimum": 0
        },
        "hideMode": {
          "description": "hide mode",
          "$ref": "#/$defs/HideMode",
          "default": "Never"
        },
        "position": {
          "description": "position of the toolbar",
          "$ref": "#/$defs/FancyToolbarSide",
          "default": "Top"
        },
        "showHibernateButton": {
          "description": "show the hibernate button on power menu",
          "type": "boolean",
          "default": false
        }
      }
    },
    "FancyToolbarSide": {
      "type": "string",
      "enum": [
        "Top",
        "Bottom"
      ]
    },
    "FloatingWindowSettings": {
      "type": "object",
      "properties": {
        "height": {
          "type": "number",
          "format": "double",
          "default": 500.0
        },
        "width": {
          "type": "number",
          "format": "double",
          "default": 800.0
        }
      }
    },
    "HideMode": {
      "oneOf": [
        {
          "description": "never hide",
          "type": "string",
          "const": "Never"
        },
        {
          "description": "auto-hide always on",
          "type": "string",
          "const": "Always"
        },
        {
          "description": "auto-hide only if is overlaped by the focused window",
          "type": "string",
          "const": "OnOverlap"
        }
      ]
    },
    "IconPackId": {
      "description": "Visual id composed of the creator username and the resource name. e.g. `@username/resource-name`",
      "$ref": "#/$defs/ResourceId"
    },
    "MixBlendMode": {
      "type": "string",
      "enum": [
        "normal",
        "multiply",
        "screen",
        "overlay",
        "darken",
        "lighten",
        "color-dodge",
        "color-burn",
        "hard-light",
        "soft-light",
        "difference",
        "exclusion",
        "hue",
        "saturation",
        "color",
        "luminosity",
        "plus-darker",
        "plus-lighter"
      ]
    },
    "MonitorConfiguration": {
      "type": "object",
      "properties": {
        "byWidget": {
          "description": "dictionary of settings by widget",
          "$ref": "#/$defs/MonitorSettingsByWidget",
          "default": {}
        }
      }
    },
    "MonitorSettingsByWidget": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/ThirdPartyWidgetSettings"
      }
    },
    "ObjectFit": {
      "type": "string",
      "enum": [
        "fill",
        "contain",
        "cover"
      ]
    },
    "ObjectPosition": {
      "type": "string",
      "enum": [
        "top",
        "center",
        "bottom",
        "left",
        "right"
      ]
    },
    "PlaybackSpeed": {
      "type": "string",
      "enum": [
        "xDot25",
        "xDot5",
        "xDot75",
        "x1",
        "x1Dot25",
        "x1Dot5",
        "x1Dot75",
        "x2"
      ]
    },
    "PluginId": {
      "description": "Visual id composed of the creator username and the resource name. e.g. `@username/resource-name`",
      "$ref": "#/$defs/ResourceId"
    },
    "Rect": {
      "type": "object",
      "properties": {
        "bottom": {
          "type": "integer",
          "format": "int32"
        },
        "left": {
          "type": "integer",
          "format": "int32"
        },
        "right": {
          "type": "integer",
          "format": "int32"
        },
        "top": {
          "type": "integer",
          "format": "int32"
        }
      },
      "required": [
        "left",
        "top",
        "right",
        "bottom"
      ]
    },
    "ResourceId": {
      "description": "Visual id composed of the creator username and the resource name. e.g. `@username/resource-name`",
      "type": "string"
    },
    "SeelenLauncherMonitor": {
      "type": "string",
      "enum": [
        "Primary",
        "MouseOver"
      ]
    },
    "SeelenLauncherRunner": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },
        "label": {
          "type": "string",
          "default": ""
        },
        "program": {
          "type": "string",
          "default": ""
        },
        "readonly": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "SeelenLauncherSettings": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "monitor": {
          "$ref": "#/$defs/SeelenLauncherMonitor",
          "default": "MouseOver"
        },
        "runners": {
          "type": "array",
          "default": [
            {
              "id": "RUN",
              "label": "t:app_launcher.runners.explorer",
              "program": "explorer.exe",
              "readonly": true
            },
            {
              "id": "CMD",
              "label": "t:app_launcher.runners.cmd",
              "program": "cmd.exe",
              "readonly": true
            }
          ],
          "items": {
            "$ref": "#/$defs/SeelenLauncherRunner"
          }
        }
      }
    },
    "SeelenWallSettings": {
      "type": "object",
      "properties": {
        "backgroundsV2": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/$defs/WallpaperId"
          }
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "interval": {
          "description": "update interval in seconds",
          "type": "integer",
          "format": "uint32",
          "default": 60,
          "minimum": 0
        },
        "randomize": {
          "description": "randomize order",
          "type": "boolean",
          "default": false
        }
      }
    },
    "SeelenWegMode": {
      "type": "string",
      "enum": [
        "FullWidth",
        "MinContent"
      ]
    },
    "SeelenWegSettings": {
      "type": "object",
      "properties": {
        "delayToHide": {
          "description": "delay to hide the toolbar on Mouse Leave in milliseconds",
          "type": "integer",
          "format": "uint32",
          "default": 800,
          "minimum": 0
        },
        "delayToShow": {
          "description": "delay to show the toolbar on Mouse Hover in milliseconds",
          "type": "integer",
          "format": "uint32",
          "default": 100,
          "minimum": 0
        },
        "enabled": {
          "description": "enable or disable the seelenweg",
          "type": "boolean",
          "default": true
        },
        "hideMode": {
          "description": "When to hide the dock",
          "$ref": "#/$defs/HideMode",
          "default": "OnOverlap"
        },
        "margin": {
          "description": "Dock/Taskbar margin in px",
          "type": "integer",
          "format": "uint32",
          "default": 8,
          "minimum": 0
        },
        "mode": {
          "description": "Dock/Taskbar mode",
          "$ref": "#/$defs/SeelenWegMode",
          "default": "MinContent"
        },
        "padding": {
          "description": "Dock/Taskbar padding in px",
          "type": "integer",
          "format": "uint32",
          "default": 8,
          "minimum": 0
        },
        "pinnedItemsVisibility": {
          "description": "Determines is the pinned item should be shown or not (this can be overridden per monitor).",
          "$ref": "#/$defs/WegPinnedItemsVisibility",
          "default": "Always"
        },
        "position": {
          "description": "Dock position",
          "$ref": "#/$defs/SeelenWegSide",
          "default": "Bottom"
        },
        "showEndTask": {
          "description": "show end task button on context menu (needs developer mode enabled)",
          "type": "boolean",
